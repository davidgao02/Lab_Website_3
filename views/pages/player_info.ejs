<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <% 
				  var image_src = '../resources/img/helmet.jpg';
				  if (result_2) {
				  		
				  		result_2.forEach(function(item){
				  			image_src = item.img_src;
				  		});  %>
				  		<%- image_src %>
				  		<%}   
				%>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id, 
							 			but will display the player's name-->
							 			<%
							 			if (data) {
							 				var option ='';
							 				data.forEach(function(item){
							 					option += '<option value=' + item.id + '>' + item.name + '</option>';
							 				}); %>
							 				<%- option %>

							 		<%	}  %>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td>
							<%
							if (result_2) {
								var y = '';
								result_2.forEach(function(item){
									y += item.year;
								}); %>
								<%- y %>
						<%  }  %>
							</td>
						</tr>
						<tr>
							<th>Major</th>
							<td>
							<%
							if (result_2) {
								var m = '';
								result_2.forEach(function(item){
									m += item.major;
								}); %>
								<%- m %>
						<%  }  %>
							</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>
							<%
							if (result_3) {
								var games ='';
								result_3.forEach(function(item){
									games += item.count;
								}); %>
								<%- games %>
						<%  }  %>
							</td>
						</tr>
						<tr>
							<td>Passing Yards: 
							<%
							if (result_2) {
								var passing = '';
								result_2.forEach(function(item){
									passing += item.passing_yards;
								}); %>
								<%- passing %>
						<%  }  %>
							</td>
							<td>Avg. Passing Yards: 
							<%
							if (result_2) {
								var avgpassing = '';
								var g ='';
								result_3.forEach(function(item){
									g += item.count;
								});
								result_2.forEach(function(item){
									avgpassing += item.passing_yards/g;
								}); %>
								<%- avgpassing %>
						<%  }  %>
							</td>
						</tr>
						<tr>
							<td>Rushing Yards: 
							<%
							if (result_2) {
								var rushing = '';
								result_2.forEach(function(item){
									rushing += item.rushing_yards;
								}); %>
								<%- rushing %>
						<%  }  %>
							</td>
							<td>Avg. Rushing Yards: 
							<%
							if (result_2) {
								var avgrushing = '';
								var g = '';
								result_3.forEach(function(item){
									g += item.count;
								});
								result_2.forEach(function(item){
									avgrushing += item.rushing_yards/g;
								}); %>
								<%- avgrushing %>
						<%  }  %>
							</td>
						</tr>
						<tr>
							<td>Receiving Yards: 
							<%
							if (result_2) {
								var receiving = '';
								result_2.forEach(function(item){
									receiving += item.receiving_yards;
								}); %>
								<%- receiving %>
						<%  }  %>
							</td>
							<td>Avg. Receiving Yards: 
							<%
							if (result_2) {
								var avgreceiving = '';
								var g ='';
								result_3.forEach(function(item){
									g += item.count;
								});
								result_2.forEach(function(item){
									avgreceiving += item.receiving_yards/g;
								}); %>
								<%- avgreceiving %>
						<%  }  %>
							</td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>